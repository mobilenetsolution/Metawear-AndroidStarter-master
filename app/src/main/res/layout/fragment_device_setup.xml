<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="40dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mbientlab.metawear.starter.DeviceSetupActivityFragment"
    tools:showIn="@layout/activity_device_setup">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/acc_start"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:id="@+id/acc_stop"
        android:layout_alignTop="@+id/acc_start"
        android:layout_toEndOf="@+id/acc_start" />

    <TextView
        android:id="@+id/gpsAltitude"
        android:layout_width="fill_parent"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="11pt"
        android:layout_below="@+id/acc_stop"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/gpsLatitude"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="11pt"
        android:layout_below="@+id/gpsAltitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gpsAltitude"
        android:layout_alignParentEnd="false" />

    <TextView
        android:id="@+id/gpsLongitude"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="11pt"
        android:layout_below="@+id/gpsLatitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gpsLatitude"
        android:layout_alignParentEnd="false" />

    <TextView
        android:id="@+id/altitude"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="11pt"
        android:layout_below="@+id/gpsLongitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gpsLongitude" />

    <TextView
        android:id="@+id/pressure"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="11pt"
        android:layout_below="@+id/altitude"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/altitude" />

    <TextView
        android:id="@+id/forecast"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="9pt"
        android:layout_below="@+id/pressure"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/pressure" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:layout_below="@+id/forecast"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/forecast"
        android:textSize="11pt" />

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="7pt"
        android:layout_below="@+id/temperature"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/forecast"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/f1"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="7pt"
        android:layout_below="@+id/p1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/forecast"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/dph"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="7pt"
        android:layout_below="@+id/f1"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/forecast"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/dpsth"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-bold"
        android:gravity="left"
        android:textAlignment="textStart"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:textColor="#223ce8"
        android:textSize="7pt"
        android:layout_below="@+id/dph"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/forecast"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtTimer"
        android:layout_alignBottom="@+id/acc_stop"
        android:layout_alignEnd="@+id/gpsAltitude"
        android:layout_alignTop="@+id/acc_stop"
        android:layout_toEndOf="@+id/acc_stop"
        android:textSize="11dp" />


</RelativeLayout>
